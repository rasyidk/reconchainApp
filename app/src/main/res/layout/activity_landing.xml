<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"
    tools:context=".landingActivity">

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recon Chain"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/color2"
                android:layout_centerHorizontal="true"
                android:textSize="30dp"/>
        </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_marginTop="30dp"
               android:layout_width="180dp"
               android:layout_height="180dp"
               android:layout_centerHorizontal="true"
               android:src="@drawable/imagelanding"
               />

       </RelativeLayout>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take Care of Our \n Environment"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/color2"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taking a little action for taking \n down the climate change"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:fontFamily="@font/poppins"
            android:lines="2"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/landing_bt_getstarted"
            android:layout_margin="@dimen/mainmarginn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:text="Get Started"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_bold"
            android:textSize="20dp"/>
    </LinearLayout>
</RelativeLayout>