<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgwhite"

    android:orientation="vertical"
    tools:context=".profile.distributorListActivity">


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/mainmarginn"
        android:layout_marginLeft="@dimen/mainmarginn"
        android:background="@drawable/ic_baseline_arrow_back_24"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/mainmarginn"
        android:layout_height="wrap_content"
        android:text="Distributor List"
        android:textColor="@color/color2"
        android:layout_marginTop="@dimen/normal_margin"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="25dp"/>

    <EditText
        android:layout_marginRight="@dimen/mainmarginn"
        android:layout_marginLeft="@dimen/mainmarginn"
        android:textColor="@color/color1"
        android:fontFamily="@font/poppins"
        android:textColorHint="#696969"
        android:layout_marginTop="@dimen/mainmarginn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="Search"
        android:background="@drawable/round_edittext_white"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dl_bt_tods"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/mainmarginn"
            android:layout_marginBottom="@dimen/mainmarginn"
            android:layout_marginRight="@dimen/mainmarginn"
            android:background="@drawable/round_rel_button"
            android:fontFamily="@font/poppins_semibold"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Distributor Request"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:elevation="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginLeft="@dimen/mainmarginn"
            android:layout_marginRight="@dimen/mainmarginn"
            android:background="@drawable/round_linear"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_account_circle_black_24"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginLeft="@dimen/mainmarginn"
                    android:layout_marginRight="@dimen/mainmarginn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zainudin"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_semibold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:text="Maluku Area"/>
                    <TextView
                        android:textSize="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maluku Tengah, Kep Maluku"/>

                    <TextView
                        android:textSize="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Delivery on 17 8 2022"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/mainmarginn"
            android:layout_marginRight="@dimen/mainmarginn"
            android:background="@drawable/round_linear"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/mainmarginn"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_account_circle_black_24"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginLeft="@dimen/mainmarginn"
                    android:layout_marginRight="@dimen/mainmarginn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ammar"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_semibold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:text="Yogyakarta Area"/>
                    <TextView
                        android:textSize="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cibinong Kab. Bogor"/>

                    <TextView
                        android:textSize="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Delivery on 17 8 2022"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>