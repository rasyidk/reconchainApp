<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgwhite"
    android:fillViewport="true"
    tools:context=".ui.productList.productListFragment">

    <LinearLayout
        android:layout_marginLeft="@dimen/mainmarginn"
        android:layout_marginRight="@dimen/mainmarginn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product List"
            android:textColor="@color/color2"
            android:layout_marginTop="@dimen/normal_margin"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="25dp"/>

        <EditText
            android:textColor="@color/black"
            android:textColorHint="@color/bgwhite"
            android:layout_marginTop="@dimen/mainmarginn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search By ID"
            android:background="@drawable/round_edittext_white"
            android:padding="10dp"/>

        <TextView
            android:layout_marginTop="@dimen/mainmarginn"
            android:layout_marginBottom="@dimen/mainmarginn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:background="@drawable/round_linear"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_marginLeft="10dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/round_rel_green">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="0.8"
                                android:minHeight="0dp"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="0dp"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="30dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="carbon"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="0dp"
                                android:textAlignment="center"
                                android:fontFamily="@font/poppins_semibold"
                                android:textColor="@color/white"
                                android:textSize="15dp"/>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@id/fpl_rel1"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_marginLeft="@dimen/mainmarginn"
                        android:layout_marginRight="@dimen/mainmarginn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Item Produced"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_semibold"/>

                        <TextView
                            android:textSize="10dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PT industri jaya"/>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:textSize="10dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_semibold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PT industri jaya"/>
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/fpl_rel1"
                    android:layout_width="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/mainmarginn"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/circle_bg"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="10dp"
                            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>
                </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/mainmarginn"
                android:background="@drawable/round_linear"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_marginLeft="10dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/round_rel_green">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="0.8"
                                android:minHeight="0dp"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="0dp"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="30dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="carbon"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="0dp"
                                android:textAlignment="center"
                                android:fontFamily="@font/poppins_semibold"
                                android:textColor="@color/white"
                                android:textSize="15dp"/>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_toLeftOf="@id/fpl_rel1"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_marginLeft="@dimen/mainmarginn"
                            android:layout_marginRight="@dimen/mainmarginn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Item Produced"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_semibold"/>

                            <TextView
                                android:textSize="10dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PT industri jaya"/>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:textSize="10dp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="PT industri jaya"/>
                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/fpl_rel2"
                        android:layout_width="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/mainmarginn"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/circle_bg"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>
                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/mainmarginn"
                android:background="@drawable/round_linear"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_marginLeft="10dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/round_rel_green">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="0.8"
                                android:minHeight="0dp"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="0dp"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="30dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="carbon"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="0dp"
                                android:textAlignment="center"
                                android:fontFamily="@font/poppins_semibold"
                                android:textColor="@color/white"
                                android:textSize="15dp"/>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_toLeftOf="@id/fpl_rel1"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_marginLeft="@dimen/mainmarginn"
                            android:layout_marginRight="@dimen/mainmarginn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Item Produced"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_semibold"/>

                            <TextView
                                android:textSize="10dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PT industri jaya"/>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:textSize="10dp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="PT industri jaya"/>
                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/fpl_rel3"
                        android:layout_width="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/mainmarginn"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/circle_bg"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>
                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>