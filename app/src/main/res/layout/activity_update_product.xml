<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgwhite"
    android:fillViewport="true"
    tools:context=".input.inputProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ip_bt_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/mainmarginn"
        android:layout_marginLeft="@dimen/mainmarginn"
        android:background="@drawable/ic_baseline_arrow_back_24"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/mainmarginn"
        android:textAlignment="center"
        android:layout_marginLeft="@dimen/mainmarginn"
        android:layout_height="wrap_content"
        android:text="Update Product"
        android:textColor="@color/color2"
        android:layout_marginTop="@dimen/normal_margin"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:text="ID product"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginLeft="@dimen/mainmarginn"
        android:layout_marginTop="@dimen/mainmarginn"
        android:textSize="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="IDX8881778"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:layout_marginLeft="@dimen/mainmarginn"
        android:layout_marginRight="@dimen/mainmarginn"
        android:padding="10dp"
        android:background="@drawable/round_edittext_grey"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:text="Carbon Relesed"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginLeft="@dimen/mainmarginn"
            android:layout_marginTop="@dimen/mainmarginn"
            android:textSize="16dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="23"
            android:editable="false"
            android:enabled="false"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor"
            android:layout_marginLeft="@dimen/mainmarginn"
            android:layout_marginRight="@dimen/mainmarginn"
            android:padding="10dp"
            android:background="@drawable/round_edittext_grey"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mainmarginn"
            android:layout_marginTop="@dimen/mainmarginn"
            android:fontFamily="@font/poppins_semibold"
            android:text="Date"
            android:textColor="@color/textColor"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/up_et_date"
            android:enabled="false"
            android:editable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor"
            android:layout_marginLeft="@dimen/mainmarginn"
            android:layout_marginRight="@dimen/mainmarginn"
            android:padding="10dp"
            android:background="@drawable/round_edittext_grey"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:text="Product Status"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginLeft="@dimen/mainmarginn"
            android:layout_marginTop="@dimen/mainmarginn"
            android:textSize="16dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/grey"

            app:cardElevation="0dp"
            android:layout_marginLeft="@dimen/mainmarginn"
            android:layout_marginRight="@dimen/mainmarginn"
            app:cardCornerRadius="10dp">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/up_spinner_status"
                android:layout_width="match_parent"
                android:backgroundTint="@color/textColor"
                android:layout_height="50dp" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:text="Shipping status"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginLeft="@dimen/mainmarginn"
            android:layout_marginTop="@dimen/mainmarginn"
            android:textSize="16dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/grey"

            app:cardElevation="0dp"
            android:layout_marginLeft="@dimen/mainmarginn"
            android:layout_marginRight="@dimen/mainmarginn"
            app:cardCornerRadius="10dp">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/up_spinner_shipping"
                android:layout_width="match_parent"
                android:backgroundTint="@color/textColor"
                android:layout_height="50dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:text="Note"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginLeft="@dimen/mainmarginn"
            android:layout_marginTop="@dimen/mainmarginn"
            android:textSize="16dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mainmarginn"
            android:layout_marginRight="@dimen/mainmarginn"
            android:background="@drawable/round_edittext_grey"

            android:padding="10dp"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor" />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ip_bt_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Save"
            android:textSize="20dp"
            android:fontFamily="@font/poppins_bold"
            android:background="@drawable/round_rel_button"
            android:textAllCaps="false"
            android:layout_marginLeft="@dimen/mainmarginn"
            android:layout_marginRight="@dimen/mainmarginn"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"/>

    </LinearLayout>
</ScrollView>